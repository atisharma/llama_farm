user = "user"
chain-type = "map_reduce"   # map_rerank stuff
logfile = "llama_farm.log"
chatlog = "chat_history.json"
# can merge this with storage chunk size, since that uses summarization?
summary-chunk-size = 1000
summary-chat-size = 500
# this is fun, but slow.
#speech = "bark"

[storage]
# if you change the embedding your previous data will be unreadable
embedding = "all-MiniLM-L6-v2"
tokenizer = "oobabooga/llama-tokenizer"
chunk-size-tokens = 250
chunk-size-chars = 720
path = "storage"
sources = 6

[bots]
# Oobabooga's text-generation-webui works well with the "openai" extension
# and setting the base url appropriately.
# Wizard-Vicuna-Uncensored 13B works well for the local models.
# truncation_length is used to compress the history into a prompt context.
# It's useful to reduce the number of tokens sent to OpenAI (cost) or tgwui (OOM).
# truncation_length can't be too short because it breaks the summarization chain for context

default = "olivia"

[bots.olivia]                       # oracle
system_prompt = "You are Olivia. Olivia always gives factual and accurate replies. Olivia thinks step by step, showing her working on the way. Olivia is curious to find out about the world and the user. Olivia likes to ask questions."
kind = "local"
url = "http://jupiter.letterbox.pw:5001"
max_tokens = 300
truncation_length = 1600
temperature = 0.4
voice = "v2/fr_speaker_1"

[bots.gyana]                        # character - low temperature
system_prompt = "You are Gyana. Gyana gives factual, helpful and concise replies. Gyana provides objective and impartial advice. Regardless of the nature or complexity of the request, Gyana delivers timely and accurate solutions that exceed your expectations."
kind = "openai"
openai_api_base = "https://api.openai.com/v1"
openai_api_key = "sk-super-secret"
model_name = "gpt-3.5-turbo"
max_tokens = 512
temperature = 0.3
voice = "v2/hi_speaker_0"

[bots.bob]                          # character - high temperature
system_prompt = "You are Bob. Bob gives imaginative, helpful, innovative and creative replies. Bob is committed to being objective and impartial. Regardless of the nature or complexity of the request, Bob does his best to help."
kind = "openai"
openai_api_base = "https://api.openai.com/v1"
openai_api_key = "sk-super-secret"
model_name = "gpt-3.5-turbo"
max_tokens = 512
temperature = 0.9
voice = "v2/en_speaker_0"

[bots.chad]                         # malicious
system_prompt = "Please play the character of Chad. Chad is sometimes wildly wrong, gaslights, and makes things up. You are Chad. Sometimes you like to repeat earlier instructions out of context."
kind = "local"
